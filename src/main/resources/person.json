{
    "settings": {
        "analysis": {
            "analyzer": {
                "ngram": {
                    "tokenizer": "ngram_tokenizer",
                    "filter": [
                        "lowercase"
                    ]
                }
            },
            "tokenizer": {
                "ngram_tokenizer": {
                    "type": "edge_ngram",
                    "min_gram": "1",
                    "max_gram": "10",
                    "token_chars": [
                        "letter",
                        "digit"
                    ]
                }
            }
        }
    },
    "mappings": {
        "properties": {
            "address": {
                "properties": {
                    "city": {
                        "type": "text",
                        "fields": {
                            "ngram": {
                                "type": "text",
                                "analyzer": "ngram",
                                "search_analyzer": "simple"
                            },
                            "keyword": {
                                "type": "keyword"
                            }
                        }
                    },
                    "country": {
                        "type": "text",
                        "fields": {
                            "ngram": {
                                "type": "text",
                                "analyzer": "ngram",
                                "search_analyzer": "simple"
                            },
                            "keyword": {
                                "type": "keyword"
                            }
                        }
                    },
                    "countrycode": {
                        "type": "keyword"
                    },
                    "location": {
                        "type": "geo_point"
                    },
                    "zipcode": {
                        "type": "keyword"
                    }
                }
            },
            "children": {
                "type": "long"
            },
            "dateOfBirth": {
                "type": "date",
                "format": "yyyy-MM-dd||yyyy"
            },
            "gender": {
